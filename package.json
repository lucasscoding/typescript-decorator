{
  "name": "typescript-decorator",
  "version": "0.0.7",
  "description": "",
  "author": "Lucas Lopes",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run test:ci && tsc --declaration && cp package.json README.md ./dist",
    "start": "node dist/index.js",
    "watch": "nodemon -e ts -w ./src -x npm run dev",
    "dev": "nodemon --watch 'src/' --exec 'npm run build && ts-node src/index.ts' -e ts",
    "test": "jest --passWithNoTests --silent=false --noStackTrace --runInBand",
    "test:unit": "npm test -- --watch",
    "test:ci": "npm test -- --coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
