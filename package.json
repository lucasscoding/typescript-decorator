{
  "name": "typescript-decorator",
  "version": "0.2.4",
  "description": "Decorators for typescript",
  "author": "Lucas Lopes",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "typescript",
    "decorators",
    "logger",
    "cache",
    "request"
  ],
  "scripts": {
    "start": "npm run test:unit",
    "serve": "json-server jest-db.json --port=3001",
    "build": "rm -rf dist && tsc -p tsconfig-build.json --declaration && npx babel dist --out-dir dist --copy-files --no-copy-ignored && cp package.json README.md ./dist",
    "test:build": "npm run test:ci && tsc --declaration && cp package.json README.md ./dist",
    "test": "jest --passWithNoTests --silent=false --noStackTrace=false --runInBand",
    "test:unit": "npm test -- --watch",
    "test:ci": "npm test -- --coverage",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "deploy": "npm run build && npm publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "axios": "^1.2.5",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "firebase": "^9.16.0",
    "git-commit-msg-linter": "^4.5.0",
    "jest": "^29.3.1",
    "json-server": "^0.17.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasshz/typescript-decorator"
  },
  "bugs": {
    "url": "https://github.com/lucasshz/typescript-decorator/issues"
  }
}
