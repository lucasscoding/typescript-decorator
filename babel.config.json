{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      },
      "@babel/preset-typescript"
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@/tests": "./tests",
          "@": "./dist"
        },
        "extensions": [".ts", ".js", ".mjs"]
      }
    ]
  ]
}